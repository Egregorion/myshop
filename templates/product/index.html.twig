{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
    {% if app.user %}
        Bonjour {{ app.user }}!
        <a href='/logout' class="btn btn-info">Se déconnecter</a>
    {% else %}
        Bonjour invité!
        <a href='/login' class="btn btn-info">Se connecter</a>
    {% endif %} 
    <div class="row">
    {% for product in products %}
        <div class="card col-12 col-md-6 col-lg-3">
            <img src="uploads/{{product.thumbnail}}" class="card-img-top" alt="photo de {{ product.name }}">
            <div class="card-body">
                <h5 class="card-title">{{ product.name }}</h5>
                <span class="bagde badge-info">{{ product.category }}</span>
                <small>{{ product.price|format_currency('EUR') }}</small>
                <p class="card-text">{{ product.description|raw }}</p>
                <a href="#" class="btn btn-primary">Go somewhere</a>
            </div>
        </div>
    {% endfor %}
    </div>
    
{% endblock %}
